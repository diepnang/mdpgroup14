<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="50%"
        android:layout_alignParentTop="true"
        android:id="@+id/layout_pre_str"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="33%"
            android:layout_alignParentLeft="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="F1"
                android:textSize="16sp"
                android:id="@+id/btn_F1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="34%"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F2"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:id="@+id/btn_F2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="33%"
            android:layout_alignParentRight="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F3"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:id="@+id/btn_F3"
            />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_pre_str"
        android:layout_alignParentLeft="true"
        app:layout_widthPercent="100%"
        android:id="@+id/layout_set_pre_str">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="Set"
            android:id="@+id/btn_set_pre_str"/>
    </RelativeLayout>
   <!-- <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_pre_str"
        android:layout_toRightOf="@id/layout_set_pre_str"
    >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:textSize="16sp"
            android:text="Send"
            android:id="@+id/btn_send_pre_str"/>
    </RelativeLayout>-->
</android.support.percent.PercentRelativeLayout>